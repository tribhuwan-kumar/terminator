{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "social-scrapper",
  "version": "0.1.0",
  "identifier": "com.social-scrapper.app",
  "build": {
    "beforeDevCommand": "bun run dev --port 11425",
    "devUrl": "http://localhost:11425",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../out"
  },
  "app": {
    "windows": [
      {
        "title": "social-scrapper",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
